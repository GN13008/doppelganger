<div class="container">
  <h1>Offer: <%= @offer.title %></h1>
  <div class="show">
  
    <div class= "d-flex">
      <div class= "col-8">
        <div class= "ofr-desc d-flex">
          <% if @offer.user.photo.attached? %>
            <%= cl_image_tag @offer.user.photo.key, class: "offer-pic", id: "" %>
          <% else %>
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "offer-pic", id: "" %>
          <% end %>

          <ul>
            <li><p>Name : <%= @offer.user.name %></p></li>
            <li><p>Location : <%= @offer.localisation %></p></li>
            <li><p>Height : 1,83 M</p></li>
            <li><p>Body type : Muscular</p></li>
            <li><p>Average Rating : 4,5</p></li>
            <li><p>Disponibility : <%= @offer.disponibility %></p></li>
            <li><strong><p>resemblance : 80%</p></strong></li>
          </ul>
        </div>

        <div>
          <h2>Description</h2>
            <p> <%= @offer.description %></p>
        </div>

        <div class="reviews">
          <h2>Reviews</h2>
          <div class= "reviews-cards">
            <img src="https://upload.wikimedia.org/wikipedia/commons/1/18/Lewis_Hamilton_2016_Malaysia_2.jpg" />
            <div class= "review-card"><!-- on fera le each ici  -->
              <h2>Lewis</h2>
              <p>Awesome dont need to sign autograph anymore</p>
            </div>
          </div>
        </div>

      </div>
      <div class= "col-4 text-center">
        <div class="info-card">
          <h2>Informations:</h2>
          <div class="info-card-right">
          <ul>
            <li><p>80$/h</p></li>
            <li><p>3*80 = 160$</p></li>
            <li><p>3*80 = 160$</p></li>
            <li><p> Extras Uber: 40$</p></li>
          </ul>
          </div>
          <div class="btn grey-button ">
            <%= link_to 'confirm reservation', dashboard_path(current_user), class:"confirm-reservation" %>
          </div>
        </div>
      </div> 
    </div>
  </div>
</div>

