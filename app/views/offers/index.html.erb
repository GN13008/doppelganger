<div class="container">
  <div class="search-bar">
    <style>
      select:invalid { color: gray; }
    </style>
      <!-- dflex container search bar -->
      <form novalidate="novalidate" class="simple_form search" action="offers#index" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
        <div class="search-form-control form-group">
         <!-- Where -->
         <div class="col-4">
           <input class="form-control string required" type="text" name="where" id="where" placeholder="Where do you need a doppel?"/>
         </div>


          <!-- When fields -->
          <div class="col-4 mx-2">
            <select required class="dropdown-toggle3" id="when" name="when">
              <option value="" disabled selected hidden>When do you need a doppel?</option>
              <option value="Weekend">Weekend</option>
              <option value="Week">Week</option>
              <option value="Afterwork">Afterwork</option>
              <option value="Every day">Every day</option>
            </select>
          </div>

          <!-- Search Button -->
          <div class="btn-search">
            <button name="button" type="submit" class="btn btn-flat search-transparent-btn1">
              <i class="fas fa-search"></i> Search
            </button>
          </div>

        </div>
      </form>
  </div>


  <!-- Offres de doppelgangers -->
    <h1><%= @title %></h1>
    <div class="d-flex justify-content-center">
      <div class="col-6 mr-2px">
        <% @offers.each do |offer| %>
          <div class="card-product">
            <% if offer.user.photo.attached? %>
              <img src='<%= cl_image_path offer.user.photo.key, height: 300, crop: :fill %>' />
            <% else %>
              <img src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
            <% end %>
            <div class="card-product-infos">
              <h2><%= offer.user.name %></h2>
              <p>localisation: <strong><%= offer.localisation %></strong></p>
              <p>disponibility: <strong><%= offer.disponibility %></strong></p>
              <p class="index-card-link"><%= link_to  "see this offer",offer_path(offer) %></p>
            </div>
          </div>
        <% end %>
      </div>
      <!-- Jsuis la map Jsuis la MAP -->
      <div id="map"
        style="width: 50%; height: 700px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>" class="mt-3 mx-4">
       </div>
    </div>
</div>
